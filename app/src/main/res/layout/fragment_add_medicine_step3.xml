<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="16dp">

    <TextView android:id="@+id/optionEveryDay" android:layout_width="match_parent" android:layout_height="48dp" android:gravity="center_vertical" android:text="Her gün" android:textSize="18sp" android:paddingStart="16dp" android:paddingEnd="16dp" />
    <TextView android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />
    <TextView android:id="@+id/optionCertainDays" android:layout_width="match_parent" android:layout_height="48dp" android:gravity="center_vertical" android:text="Haftanın belirli günleri" android:textSize="18sp" android:paddingStart="16dp" android:paddingEnd="16dp" />
    <TextView android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />
    <TextView android:id="@+id/optionEveryXDay" android:layout_width="match_parent" android:layout_height="48dp" android:gravity="center_vertical" android:text="Her X günde bir" android:textSize="18sp" android:paddingStart="16dp" android:paddingEnd="16dp" />
    <TextView android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />
    <TextView android:id="@+id/optionEveryXWeek" android:layout_width="match_parent" android:layout_height="48dp" android:gravity="center_vertical" android:text="Her X haftada bir" android:textSize="18sp" android:paddingStart="16dp" android:paddingEnd="16dp" />
    <TextView android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />
    <TextView android:id="@+id/optionEveryXMonth" android:layout_width="match_parent" android:layout_height="48dp" android:gravity="center_vertical" android:text="Her X ayda bir" android:textSize="18sp" android:paddingStart="16dp" android:paddingEnd="16dp" />
</LinearLayout>