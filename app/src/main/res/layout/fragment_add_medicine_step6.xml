<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:padding="24dp">

    <TextView
        android:id="@+id/optionBefore"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:text="Yemekten önce"
        android:textSize="18sp"
        android:background="?attr/selectableItemBackground"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>
    <TextView
        android:id="@+id/optionDuring"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:text="Yemek sırasında"
        android:textSize="18sp"
        android:background="?attr/selectableItemBackground"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>
    <TextView
        android:id="@+id/optionAfter"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:text="Yemekten sonra"
        android:textSize="18sp"
        android:background="?attr/selectableItemBackground"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>
    <TextView
        android:id="@+id/optionDoesntMatter"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:text="Fark etmiyor"
        android:textSize="18sp"
        android:background="?attr/selectableItemBackground"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>
</LinearLayout>